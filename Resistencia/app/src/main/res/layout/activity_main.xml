<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micaelaviegas.resistencia.MainActivity">

    <EditText
        android:id="@+id/EditValor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/EditValor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_below="@+id/EditValor1"
        android:layout_alignLeft="@+id/EditValor1"
        android:layout_alignStart="@+id/EditValor1" />

    <Button
        android:id="@+id/Boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Calcular"
        android:layout_below="@+id/EditValor2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Serie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Boton1"
        android:layout_toLeftOf="@+id/Boton1"
        android:layout_toStartOf="@+id/Boton1" />

    <TextView
        android:id="@+id/Paralelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Serie"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/Boton1"
        android:layout_toRightOf="@+id/Boton1"
        android:text="TextView" />

    <Button
        android:id="@+id/Boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below="@+id/Color3"
        android:layout_toRightOf="@+id/Serie"
        android:layout_toEndOf="@+id/Serie"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/Resistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/Boton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Spinner
        android:id="@+id/Color1"
        android:entries="@array/colores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/Serie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/Color2"
        android:entries="@array/colores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Color1"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/Color3"
        android:entries="@array/colores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Color2"
        android:layout_marginTop="31dp" />

</RelativeLayout>
